<!DOCTYPE html>
<html>
<head>
  <title>Messages</title>
  <%= stylesheet_link_tag    "application" %>
  <%= stylesheet_link_tag    "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/themes/smoothness/jquery-ui.css" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="user_nav">
    <% if current_user %>
      Welcome <%= current_user.name %>! 
      <%= link_to "Sign Out", signout_path %>
    <% else %>
      <%= link_to "Sign in with Twitter", "/auth/twitter" %>
    <% end %>
  </div>

  <div id="top">
    <h1>Messages</h1>
  </div>

  <div id="nav_bar">
    <ul class="nav horizontal">
      <li><%= link_to 'Browser Messages' %></li>
      <li><%= link_to 'About' %></li>
      <li><%= link_to 'Feedback' %></li>
    </ul>
  <%= form_tag messages_path, :method => 'get' do %>
    <div>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search Messages", :name => nil %>
    </div> 
  <% end %>
</div>

  <div id="main"> 
    <div class="content">
<%= yield %>
    </div>
  </div>

</body>
</html>
