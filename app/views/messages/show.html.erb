<div id="message">
  <div class="info">
    <h1><%= @message.title %></h1>
    <div class="details">
      by <%= @message.speaker_name %> 
      <%= @message.mdate.strftime("on %b %d, %Y") %> 
      in <%= @message.category_names %> | 
      <%= @message.listened_on.strftime("listened on %b %d, %Y") if @message.listened_on.present? %> 
    </div>
    <div class="summary">
      <%= @message.summary %>
    </div>
    <div class="url">
      <%= @message.url %>
    </div>
    <div class="verses">
  <% @message.verses.each do |verse| %>
    <%= verse.ref %> | <%= link_to_unless verse.favor, "like", like_verse_path(verse), :method => :put %><br />
    <%= verse.esv_passage %><br />
  <% end %>
    </div>
  </div>
<%= link_to 'Edit', edit_message_path(@message) %>
</div>

