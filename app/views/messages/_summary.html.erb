<div class="span8">
<%= render 'stat_filter' %>

<div class="messages">
  <div class="full">
<% if @messages.present? %>
  <% @messages.each do |message| %>
    <div class="message">
      <div class="main">
        <h2><%= link_to message.title, message_path(message) %></h2>
        <div class="info">
          <%= "By " + message.speaker_name unless message.speaker_name.blank? %> 
          <%= message.mdate.strftime("on %b %d, %Y") unless message.mdate.blank? %> 
          <%= "in Category: " +  message.category_names unless message.category_names.blank? %>
        </div>
        <div class="summary">
          <%= message.summary %>
        </div>
        <div class="info">
          <%= message.verse_refs.join('; ') %>
        </div>
        <div class="clear"></div>
      </div>
    </div>
  <% end %>
<%= paginate @messages %>
<% end %>
  </div>
</div>
</div>

