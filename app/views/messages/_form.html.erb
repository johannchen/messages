<%= form_for @message do |f| %>
  <%= render "shared/error_messages", :target => @message %>

  <div class="field">
    <label for="message_title">
      <%= mark_required(@message, :title) %> Title
    </label>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :date %>
    <%= f.text_field :mdate %>
  </div>
  <div class="field">
    <%= f.label :speaker %>
    <%= f.text_field :speaker_name %>
  </div>
  <div class="field">
    <%= f.label :link %>
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label :listened_on %>
    <%= f.text_field :listened_on %>
  </div>
  <div class="field">
    <%= f.label :category_names %>
    <%= f.text_field :category_names, :class => "ui-widget" %>
  </div>
  <div class="field">
    <%= f.label :summary %>
    <%= f.text_area :summary, :rows => 6 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
