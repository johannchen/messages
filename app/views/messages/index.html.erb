<div class="side">
  <div class="categories">
    <h2>Categories</h2>
    <ul>
      <li>Love</li>
      <li>Joy</li>
      <li>Peace</li>
    </ul>
  </div>
</div>
<div class="messages">
  <%= link_to "New Message", new_message_path %>
  <div class="full">
<% if @messages.present? %>
  <% @messages.each do |message| %>
    <div class="message">
      <div class="main">
        <h2><%= message.title %></h2>
        <div class="info">
          By <%= message.speaker_name %> 
          <%= message.mdate.strftime("on %b %d, %Y") %> 
          in <%= message.category_names %>
        </div>
        <div class="summary">
          <%= message.summary %>
        </div>
        <div class="clear"></div>
      </div>
    </div>
<% end %>
<% else %>
<p>no messages found.</p>
<% end %>
  </div>
</div>

<%= paginate @messages %>
