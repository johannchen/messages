<div data-role="header">
  <%= link_to 'Home', root_url, "data-icon" => "home" %> 
  <h1>Categories</h1>
  <%= link_to 'Add', "#", "data-icon" => "plus" %> 
</div>

<div data-role="content">
  <ul data-role="listview">
    <% @categories.each do |category| %>
    <li>
      <%= link_to category.name, category_path(category) %> 
    </li>
    <% end %> 
  </ul>
</div>
